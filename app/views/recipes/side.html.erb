<div class="contents">
  <div class="under-content">
    <% @recipes.each do |recipe|%>
      <div class="l-wrapper">
        <article class="card">        
          <div class="card__header">
            <h3 class="card__header__title"><%= recipe.title %></h3>
            <figure class="card__header__thumbnail">
              <%= image_tag recipe.image.to_s%>
            </figure>
          </div>
          <div class="card__body">
            <div class="maru">
              <div class="cal"><%= recipe.calorie %>kcal</div>
            </div>
            <div class="maru size_noemal orange">
              <div class="sug"><%= recipe.sugar%>g</div>
            </div>
          </div>
          <div class="card__footer">
            <p class="card__footer__text"><%= link_to '詳細をみる', "/recipes/#{recipe.id}", method: :get ,class:"button -compact"%></p>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</div>        